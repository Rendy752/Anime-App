                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOpening"
                    style="@style/AnimeTitle.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_border"
                    android:justificationMode="inter_word"
                    android:text="@string/opening" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvOpening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/endingContainer"
                style="@style/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEnding"
                    style="@style/AnimeTitle.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_border"
                    android:justificationMode="inter_word"
                    android:text="@string/ending" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvEnding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/externalContainer"
                style="@style/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvExternal"
                    style="@style/AnimeTitle.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_border"
                    android:justificationMode="inter_word"
                    android:text="@string/external" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvExternal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/streamingContainer"
                style="@style/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStreaming"
                    style="@style/AnimeTitle.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_border"
                    android:justificationMode="inter_word"
                    android:text="@string/streaming" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvStreaming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
